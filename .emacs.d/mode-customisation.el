(defun myevil-quit ()
  "Kill what I'm looking at now."
  (interactive)

  ;; If there's only one window left, kill the buffer.
  (if (one-window-p)
      (kill-buffer)

    ;; Otherwise, if the current buffer is on multiple windows, kill the single window.
    (if (> (length (get-buffer-window-list)) 1)
        (delete-window)

      ;; If it's only on this one window, kill the window and the buffer.
      (kill-buffer-and-window))))


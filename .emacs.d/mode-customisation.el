(defun backspace-whitespace-to-tab-stop (indent-offset)
  "Delete whitespace backwards by INDENT-OFFSET, or otherwise delete one character if not at whitespace."
  (interactive)
  (if (or indent-tabs-mode
          (region-active-p)
          (save-excursion
            (> (point) (progn (back-to-indentation)
                              (point)))))
      (call-interactively 'backward-delete-char-untabify)
    (let ((movement (% (current-column) indent-offset))
          (p (point)))
      (when (= movement 0) (setq movement indent-offset))
      ;; Account for edge case near beginning of buffer
      (setq movement (min (- p 1) movement))
      (save-match-data
        (if (string-match "[^\t ]*\\([\t ]+\\)$" (buffer-substring-no-properties (- p movement) p))
            (backward-delete-char (- (match-end 1) (match-beginning 1)))
          (call-interactively 'backward-delete-char))))))

(defun backspace-whitespace-c-mode ()
 (interactive)
 (backspace-whitespace-to-tab-stop c-basic-offset))

(defun my-c-mode-hook ()
  ;; Use a 4 space indent
  (setq c-basic-offset 4)

  ;; Don't add extra indent for comments
  (c-set-offset 'comment-intro 0)

  ;; Continue comments when pressing enter
  (local-set-key (kbd "RET") 'c-indent-new-comment-line)

  (local-set-key (kbd "DEL") 'backspace-whitespace-c-mode)
  ;; (setq local-abbrev-table c-mode-abbrev-table)
  )
(add-hook 'c-mode-common-hook 'my-c-mode-hook)


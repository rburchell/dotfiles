#!/bin/bash

# skip ourselves (assume we're in $HOME ... probably not great but ok), and pick
# the last real ssh binary
realssh=$(which -a ssh | grep -v "$HOME" | tail -n1)

if [[ $# -eq 1 && "$1" == "liz" || "$1" == "eli" ]]; then
    exec "$realssh" "$1" -t "HOME=~/robin_dotfiles zsh"
else
    exec "$realssh" "$@"
fi

#!/bin/sh
if [ -z "$1" ]; then
    echo "$0: need a filename to upload"
    exit 1
fi

if ! [ -f "$1" ]; then
    echo "$0: file $1 does not exist"
    exit 1
fi

name=$(printf %q $(basename "$1"))
scp "$1" "eli:/tmp/$name"
ssh eli "scp /tmp/$name http.kvm:/media/http/www/paste.crimson.no/www/$name && rm /tmp/$name && exit"

echo "https://paste.crimson.no/$name"

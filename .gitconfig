[user]
	name = "Robin Burchell"
	email = "robin.burchell@collabora.com"
[core]
	whitespace = trailing-space,space-before-tab,indent-with-non-tab
	editor = vim
[diff]
	renames = copy
[color]
	diff = auto
[gc]
	# If there are many loose objects, pack them
	auto = 50
	# If there are too many packs, unify them
	autopacklimit = 5
[alias]
    ci = commit -a -v
	ap = !sh -c 'git rev-list --reverse  | xargs -n1 git cherry-pick' -
    unadd = reset HEAD --
    unstage = reset HEAD --
    stage = add -v
    graph = log --pretty=oneline --topo-order --graph --abbrev-commit
[sendemail]
	smtpserver = "mail.collabora.co.uk"
	smtpuser = "burchr"
	smtpencryption = tls
	smtpserverport = 587

Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.hintstyle: hintfull
Xft.dpi:       96
! }}}

!! URxvt Appearance
! Inspired from https://addy-dclxvi.github.io/post/configuring-urxvt/
! And https://www.askapache.com/linux/rxvt-xresources/
URxvt*font: xft:DejaVu Sans Mono:size=8
URxvt.letterSpace: -1
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 4
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollTtyKeypress: true
URxvt.urgentOnBell: true
URxvt.visualBell: true
URxvt.depth: 24
URxvt.iso14755: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[0c
URxvt.keysym.Control-Left: \033[0d

